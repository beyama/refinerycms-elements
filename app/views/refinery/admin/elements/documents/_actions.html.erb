<ul>
  <li>
    <%= render "/refinery/admin/search", :url => refinery.admin_elements_documents_path %>
  </li>
  <li>
    <%= link_to t('.create_new'), refinery.new_admin_elements_document_path,
                 :class => "add_icon" %>
  </li>
  <% if @documents.many? and !searching? %>
    <li>
      <%= link_to t('.reorder_documents'), refinery.admin_elements_documents_path,
                  :id => "reorder_action",
                  :class => "reorder_icon" %>

      <%= link_to t('.reorder_documents_done'), refinery.admin_elements_documents_path,
                  :id => "reorder_action_done",
                  :style => "display: none;",
                  :class => "reorder_icon" %>
    </li>
  <% end %>
</ul>
