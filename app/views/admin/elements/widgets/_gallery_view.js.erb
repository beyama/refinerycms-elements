widgets.GalleryView = ElementsEditor.ElementBaseView.extend({
  elementTitle: 'Gallery',

  className: 'element galleryView clearfix',

  render: function() {
    ElementsEditor.ElementBaseView.prototype.render.apply(this, arguments);

    var collection = this.model.get('pictures');

    if(!collection) {
      collection = new Elements.ElementCollection();
      this.model.set({ images: collection });
    }

    this.pictureList = this.getWidgetForProperty('pictures', {
      model: collection,
      togglable: false,
      headerless: true
    });

    this.body().append(this.pictureList.render().el);

    return this;
  }

});

ElementsEditor.defaultWidgets['Gallery'] = 'GalleryView';

